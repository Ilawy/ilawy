---
import Layout from "../layouts/layout.astro";
import Timeline from "@/components/self/timeline.astro";
import IndexSkills from "@/components/self/index-skills";
import { education, workExperience, projects } from "../data";
---

<Layout>
  <section class="flex items-center mb-12">
    <div class="flex-1">
      <h1 class="text-3xl flex items-center">Hello, Human</h1>
      <h2 class="text-2xl font-bold">This is Mohammed Amr</h2>
      <p>
        A software developer based in Egypt, currently working at <span
          class="text-[#e60000] font-bold dark:brightness-200">Vodafone</span
        >, focusing on building rich, performant and user-friendly web for
        everyone
      </p>
    </div>
    <div class="">
      <div class="w-16 h-16 rounded-full bg-purple-500"></div>
    </div>
  </section>
  <section>
    <h2 class="text-2xl">Skills</h2>
    <IndexSkills />
  </section>
  <section class="mb-5">
    <h2 class="text-2xl">About me</h2>
    <p class="text-balance">
      In 2024, I graduated from ITI Open Source Applications Development 9-month
      diploma, which was my first and most important step in my SWE career,
      later in 2025, I joined Vodafone EG. beside my work, I'm very interested
      in open-source projects development as it's the core of my passion, which
      is providing helpful solutions for everyone.
    </p>
  </section>
  <section>
    <h2 class="text-2xl">Work Experience</h2>
    <Timeline>
      {
        workExperience.reverse().map((item) => (
          <li class="mb-10 ms-6">
            <span class="absolute flex items-center justify-center w-6 h-6 bg-blue-100 rounded-full -start-3 ring-8 ring-white dark:ring-gray-900 dark:bg-blue-900" />
            <h3 class="flex items-center mb-1 text-lg font-semibold text-accent-foreground">
              {item.title} at {item.company}
            </h3>
            <time class="block mb-2 text-sm font-normal leading-none text-gray-400 dark:text-gray-500">
              {item.date}
            </time>
          </li>
        ))
      }
    </Timeline>
  </section>

  <section>
    <h2 class="text-2xl">Education</h2>
    <Timeline>
      {
        education.reverse().map((item) => (
          <li class="mb-10 ms-6">
            <span class="absolute flex items-center justify-center w-6 h-6 bg-blue-100 rounded-full -start-3 ring-8 ring-white dark:ring-gray-900 dark:bg-blue-900" />
            <h3 class="flex items-center mb-1 text-lg font-semibold text-accent-foreground">
              {item.title}
            </h3>
            <time class="block mb-2 text-sm font-normal leading-none text-accent-foreground">
              {item.description}, {item.date}
            </time>
          </li>
        ))
      }
    </Timeline>
  </section>
  <section class="mb-5">
    <h2 class="text-2xl">Projects</h2>
    <div
      class="grid grid-cols-1 md:grid-cols-2 gap-4 justify-items-center _projects"
    >
      <!-- card -->
      {
        projects.map((project) => (
          <div class="gradient-border-container break-inside-avoid-column w-auto">
            <div class="border bg-accent text-accent-foreground hover:shadow-2xl rounded-2xl flex flex-col h-full flex-1">
              <div class="p-3 flex flex-col gap-3 flex-1">
                <div class="flex items-center justify-between">
                  <span class="text-lg font-bold">{project.title}</span>
                </div>
                <div class="flex flex-wrap gap-2">
                  {project.tags.map((tag) => (
                    <span class="px-2 py-1 border rounded text-sm">{tag}</span>
                  ))}
                </div>
                <div class="flex-1">
                  {/* i'm here just to push the card to the bottom */}
                </div>
                <p class="" set:html={project.description} />
                <div class="flex items-center justify-end gap-3 mt-3">
                  {project?.options?.map?.((option) => (
                    <a
                      href={option.href}
                      class="text-sm font-semibold text-blue-500 hover:underline"
                      target="_blank"
                    >
                      {option.label}
                    </a>
                  ))}
                </div>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </section>
</Layout>
